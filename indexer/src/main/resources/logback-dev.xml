<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender for Spring-like output -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level [%15.15thread] %-40.40logger{39}.%L : %msg%n%ex</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- Specific logger levels -->
    <logger name="com.zaxxer.hikari" level="WARN" />
    <logger name="jdk.internal.reflect" level="WARN" />
    <logger name="org.ktorm" level="INFO" />
    <logger name="com.bloxbean" level="INFO" />
    <logger name="com.bloxbean.cardano.yaci.core" level="WARN" />
    <logger name="tech.edgx.prise.indexer" level="DEBUG" />

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>