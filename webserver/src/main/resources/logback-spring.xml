<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Include Spring Boot's default Logback configuration -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- Modified pattern: shorter date, thread, and logger -->
            <pattern>%clr(%d{yy-MM-dd HH:mm:ss}){faint} %clr(%-5p) %clr([%8.8t]){faint} %clr(%-25.25logger{24}){cyan} %clr(:){faint} %m%n</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>

    <!-- Root logger configuration -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

    <!-- Development profile: More verbose logging -->
    <springProfile name="dev">
        <logger name="tech.edgx.prise.webserver" level="DEBUG" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>
        <!-- Override console pattern for dev -->
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%clr(%d{yy-MM-dd HH:mm:ss.SSS}){faint} %clr(%-5p) %clr([%15.15t]){faint} %clr(%-30.30logger{29}.%L){cyan} %clr(:){faint} %m%n</pattern>
                <charset>utf8</charset>
            </encoder>
        </appender>
    </springProfile>

    <!-- Default profile (active when no profile is specified) -->
    <springProfile name="default">
        <logger name="tech.edgx.prise.webserver" level="INFO" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>
    </springProfile>

</configuration>